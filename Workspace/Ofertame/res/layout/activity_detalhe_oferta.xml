<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtDetalheTitulo"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Titulo" />

    <TextView
        android:id="@+id/txtDetalhePreco"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtDetalheData"
        android:layout_alignParentRight="true"
        android:text="Preco" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <RatingBar
            android:id="@+id/ratingDetalheInteresseOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtDetalheAnunciante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtDetalheFornecedor"
        android:layout_marginTop="19dp"
        android:text="Anunciante" />

    <RatingBar
        android:id="@+id/ratingDetalheAnunciante"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtDetalheAnunciante"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp" />

    <TextView
        android:id="@+id/txtDetalheFornecedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtDetalheEndereco"
        android:layout_marginTop="15dp"
        android:text="Fornecedor" />

    <TextView
        android:id="@+id/txtDetalheEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtDetalheData"
        android:layout_marginTop="18dp"
        android:text="Endereco" />

    <TextView
        android:id="@+id/txtDetalheData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtDetalheTitulo"
        android:layout_marginTop="15dp"
        android:text="Data" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:text="@string/lblQuestaoOferta"
        android:textColor="@android:color/holo_blue_dark" />

</RelativeLayout>